@model Reader.Models.Translator
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
	ViewData["Title"] = "Delete";
}

<div class="row text-right">
	<h4>  Do you want Delete  <span> @Model.Name  @Model.Family </span> ? </h4>
	<form asp-action="Deleted">
		<input type="hidden" value="@Model.TranslatorID" name="id" />
		<input type="submit" value="Yes" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-default">No </a>
	</form>

</div>

